@page "/Prayer/RosaryList"
@inject NavigationManager Navigation

<div class="d-flex flex-column align-items-center gap-3" style="width: 70%; margin:auto;">

    <div class="col-8">
        <div @onclick="GoNewbie" class="card card-hover" style="width:100%;">
            <img class="card-img-top" src="Image/prayer_picture.png" />
            <div class="overlay"></div>
            <div class="card-img-overlay d-flex justify-content-center align-items-center">
                <h4 class="card-title text-white fs-4">Hướng Dẫn Lần Hạt Mân Côi</h4>
            </div>
        </div>
    </div>

    <div class="col-8">
        <div @onclick="GoMysteries" class="card card-hover" style="width:100%;">
            <img class="card-img-top" src="Image/prayer_picture.png" />
            <div class="overlay"></div>
            <div class="card-img-overlay d-flex justify-content-center align-items-center">
                <h4 class="card-title text-white fs-4">Các Mầu Nhiệm</h4>
            </div>
        </div>
    </div>

    <div class="col-8">
        <div @onclick="GoBasic" class="card card-hover" style="width:100%;">
            <img class="card-img-top" src="Image/prayer_picture.png" />
            <div class="overlay"></div>
            <div class="card-img-overlay d-flex justify-content-center align-items-center">
                <h4 class="card-title text-white fs-4">Cầu Nguyện Mân Côi</h4>
            </div>
        </div>
    </div>

</div>

<style>
    .card-img-top {
        object-fit: cover;
        height: 30vh;
        transition: transform 0.5s ease;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        border-radius: 0.25rem;
        pointer-events: none;
    }

    .card-hover {
        overflow: hidden;
        position: relative;
        cursor: pointer;
    }

        .card-hover:hover .card-img-top {
            transform: scale(1.1);
        }
</style>

@code {
    private void GoNewbie() => Navigation.NavigateTo("/Rosary/Newbie");
    private void GoMysteries() => Navigation.NavigateTo("/Rosary/Mysteries");
    private void GoBasic() => Navigation.NavigateTo("/Rosary/Basic");
}
