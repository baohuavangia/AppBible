@page "/Rosary/Newbie"
@inject IRosaryService RosaryService
@using AppBibleNew.Service
@using AppBibleNew.Model

<div class="container py-4" style="background-color:#f5f5f5; min-height:100vh;">
    <h1 class="text-center mb-3" style="font-weight:700; color:#2c3e50;">🕊 Hướng dẫn cho người mới</h1>
    <p class="text-center text-muted mb-5">Làm theo các bước dưới đây để cầu nguyện Lần Mân Côi một cách dễ dàng.</p>

    @if (flow == null)
    {
        <p class="text-center">⏳ Đang tải...</p>
    }
    else
    {
        <div class="row g-3">
            <!-- Phần mở đầu -->
            <div class="col-12">
                <div class="card shadow-sm rounded" style="border:none;">
                    <div class="card-header" style="background: linear-gradient(90deg, #ffecd2, #fcb69f); font-weight:600; font-size:1.1rem;">
                        Phần mở đầu
                    </div>
                    <div class="card-body bg-white">
                        <ol class="mb-0">
                            @foreach (var step in flow.Intro)
                            {
                                <li class="mb-2 d-flex align-items-start">
                                    <span class="me-2" style="width:25px; height:25px; background-color:#fcb69f; color:white; font-weight:bold; border-radius:50%; display:flex; justify-content:center; align-items:center;">✔</span>
                                    <span>@step.Prayer</span>
                                </li>
                            }
                        </ol>
                    </div>
                </div>
            </div>

            <!-- Một chục Kinh -->
            <div class="col-12">
                <div class="card shadow-sm rounded" style="border:none;">
                    <div class="card-header" style="background: linear-gradient(90deg, #c1f0f6, #85d7ff); font-weight:600; font-size:1.1rem;">
                        Một chục Kinh
                    </div>
                    <div class="card-body bg-white">
                        <ol class="mb-0">
                            @foreach (var step in flow.Decade)
                            {
                                <li class="mb-2 d-flex align-items-start">
                                    <span class="me-2" style="width:25px; height:25px; background-color:#85d7ff; color:white; font-weight:bold; border-radius:50%; display:flex; justify-content:center; align-items:center;">☀</span>
                                    <span>@step.Prayer</span>
                                </li>
                            }
                        </ol>
                    </div>
                </div>
            </div>

            <!-- Kết thúc -->
            <div class="col-12">
                <div class="card shadow-sm rounded" style="border:none;">
                    <div class="card-header" style="background: linear-gradient(90deg, #fcd2d2, #fc8585); font-weight:600; font-size:1.1rem;">
                        Kết thúc
                    </div>
                    <div class="card-body bg-white">
                        <ol class="mb-0">
                            @foreach (var step in flow.Conclusion)
                            {
                                <li class="mb-2 d-flex align-items-start">
                                    <span class="me-2" style="width:25px; height:25px; background-color:#fc8585; color:white; font-weight:bold; border-radius:50%; display:flex; justify-content:center; align-items:center;">✝</span>
                                    <span>@step.Prayer</span>
                                </li>
                            }
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5 text-muted" style="font-size:0.9rem;">
            ✨ Hãy cầu nguyện theo thứ tự để cảm nhận trọn vẹn ý nghĩa của từng mầu nhiệm.
        </div>
    }
</div>

@code {
    private RosaryFlow? flow;

    protected override async Task OnInitializedAsync()
    {
        flow = await RosaryService.LoadRosaryFlowAsync();
    }
}
