@page "/Rosary/Newbie"
@inject IRosaryService RosaryService
@using AppBibleNew.Service
@using AppBibleNew.Model

<style>
    .step-col {
        width: 90px;
        min-width: 90px;
        display: flex;
        align-items: center; /* canh giữa dọc */
        justify-content: flex-end; /* đẩy chữ sang phải */
        padding-right: 0.75rem;
    }

    .step-badge {
        font-weight: 700;
        color: #2c3e50;
        line-height: 1.1;
        text-align: right;
        white-space: nowrap;
    }

    .accordion-button,
    .accordion-button.collapsed {
        padding-left: 1rem;
    }

    .accordion-body {
        line-height: 1.6;
        font-size: 0.98rem;
    }
</style>

<div class="container py-4" style="background-color:#f5f5f5; min-height:100vh;">
    <h1 class="text-center mb-3" style="font-weight:700; color:#2c3e50;">🕊 Hướng dẫn cho người mới</h1>
    <p class="text-center text-muted mb-5">
        Làm theo các bước dưới đây để cầu nguyện Lần Mân Côi một cách dễ dàng.
    </p>

    @if (flow == null)
    {
        <p class="text-center">⏳ Đang tải...</p>
    }
    else
    {
        <div class="row g-4">
            <div class="row d-flex justify-content-center">
                <div class="col-6">
                    <div class="row">
                        <div class="col-12">
                            <div class="card shadow-sm rounded border-0">
                                <div class="card-body bg-white">

                                    <!-- PHẦN MỞ ĐẦU -->
                                    <ol class="mb-4" style="list-style:none; padding:0;">
                                        @foreach (var (step, i) in flow.Intro.Select((x, i) => (x, i)))
                                        {
                                            <li class="mb-3 d-flex align-items-center">
                                                <div class="step-col">
                                                    <div class="step-badge">Bước: @step.StepGuide</div>
                                                </div>

                                                <div class="accordion flex-grow-1" id="accordionIntro">
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header">
                                                            <button class="accordion-button collapsed" type="button"
                                                                    data-bs-toggle="collapse" data-bs-target="#intro-@i"
                                                                    aria-expanded="false" aria-controls="intro-@i">
                                                                @step.Prayer
                                                            </button>
                                                        </h2>
                                                        <div id="intro-@i" class="accordion-collapse collapse"
                                                             data-bs-parent="#accordionIntro">
                                                            <div class="accordion-body">@step.Content</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ol>

                                    <!-- PHẦN NĂM SỰ -->
                                    <ol class="mb-4" style="list-style:none; padding:0;">
                                        @foreach (var (step, i) in flow.Decade.Select((x, i) => (x, i)))
                                        {
                                            <li class="mb-3 d-flex align-items-center">
                                                <div class="step-col">
                                                    <div class="step-badge">Bước: @step.StepGuide</div>
                                                </div>

                                                <div class="accordion flex-grow-1" id="accordionDecade">
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header">
                                                            <button class="accordion-button collapsed" type="button"
                                                                    data-bs-toggle="collapse" data-bs-target="#decade-@i"
                                                                    aria-expanded="false" aria-controls="decade-@i">
                                                                @step.Prayer
                                                            </button>
                                                        </h2>
                                                        <div id="decade-@i" class="accordion-collapse collapse"
                                                             data-bs-parent="#accordionDecade">
                                                            <div class="accordion-body">@step.Content</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ol>

                                    <!-- PHẦN KẾT THÚC -->
                                    <ol class="mb-0" style="list-style:none; padding:0;">
                                        @foreach (var (step, i) in flow.Conclusion.Select((x, i) => (x, i)))
                                        {
                                            <li class="mb-3 d-flex align-items-center">
                                                <div class="step-col">
                                                    <div class="step-badge">Bước: @step.StepGuide</div>
                                                </div>

                                                <div class="accordion flex-grow-1" id="accordionConclusion">
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header">
                                                            <button class="accordion-button collapsed" type="button"
                                                                    data-bs-toggle="collapse" data-bs-target="#conclusion-@i"
                                                                    aria-expanded="false" aria-controls="conclusion-@i">
                                                                @step.Prayer
                                                            </button>
                                                        </h2>
                                                        <div id="conclusion-@i" class="accordion-collapse collapse"
                                                             data-bs-parent="#accordionConclusion">
                                                            <div class="accordion-body">@step.Content</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ol>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <img src="Image/Fatima.png" width="80%" />
                </div>
            </div>
        </div>

        <div class="text-center mt-5 text-muted" style="font-size:0.9rem;">
            ✨ Hãy cầu nguyện theo thứ tự để cảm nhận trọn vẹn ý nghĩa của từng mầu nhiệm.
        </div>
    }
</div>

@code {
    private RosaryFlow? flow;

    protected override async Task OnInitializedAsync()
    {
        flow = await RosaryService.LoadRosaryFlowAsync();
    }
}
